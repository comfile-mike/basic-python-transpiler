{
  "name": "cubloc2",
  "displayName": "cubloc2",
  "description": "CUBLOC2 support for Visual Studio Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./extension.js",
  "activationEvents": [
    "onLanguage:cubloc-basic"
  ],
  "contributes": {
    "configurationDefaults": {
      "explorer.fileNesting.enabled": true,
      "explorer.fileNesting.patterns": {
        "*.cub": "${capture}.cub.py"
      }
    },
    "debuggers": [
      {
        "type": "cubloc-basic",
        "label": "CUBLOC BASIC",
        "program": "./debugAdapter.js",
        "runtime": "node",
        "languages": [
          "cubloc-basic"
        ],
        "configurationAttributes": {
          "launch": {
            "required": [
              "program",
              "serialPort"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Path to the .cub file to transpile and upload."
              },
              "serialPort": {
                "type": "string",
                "description": "Serial port for the device (for example COM3 or /dev/ttyUSB0)."
              },
              "remotePath": {
                "type": "string",
                "description": "Optional remote filename/path on the device. Defaults to main.py."
              },
              "runAfterUpload": {
                "type": "boolean",
                "default": true,
                "description": "Run the uploaded file after it is copied to the device."
              },
              "stopCommand": {
                "type": "string",
                "default": "soft-reset",
                "description": "mpremote command used to stop execution when the session is terminated."
              },
              "mpremotePath": {
                "type": "string",
                "description": "Optional path to the mpremote executable."
              },
              "mpremoteArgs": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Additional arguments passed to mpremote before the connect command."
              },
              "cwd": {
                "type": "string",
                "description": "Working directory for mpremote."
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "cubloc-basic",
            "request": "launch",
            "name": "CUBLOC BASIC: Upload to device",
            "program": "${file}",
            "serialPort": "COM3"
          }
        ],
        "configurationSnippets": [
          {
            "label": "CUBLOC BASIC: Upload to device",
            "description": "Transpile the current .cub file and upload it using mpremote.",
            "body": {
              "type": "cubloc-basic",
              "request": "launch",
              "name": "CUBLOC BASIC: Upload to device",
              "program": "${file}",
              "serialPort": "COM3",
              "runAfterUpload": true
            }
          }
        ]
      }
    ],
    "languages": [
      {
        "id": "cubloc-basic",
        "aliases": [
          "CUBLOC BASIC",
          "cubloc-basic"
        ],
        "extensions": [
          ".cub"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "cubloc-basic",
        "scopeName": "source.cubloc-basic",
        "path": "./syntaxes/cubloc-basic.tmLanguage.json"
      }
    ]
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1"
  }
}
